{% extends 'base.html.twig' %}

{% block title %}Image{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="float-end">
            <a class="btn btn-primary" href="{{ path('app_image_index') }}">back to list</a>
        </div>

        <div class="mt-2 mb-4">
            <h2>Image : {{ image.originalName }}</h2>

            <div class="table border border-light border-4 rounded mt-4 text-center p-4">
                <img src="{{ path('app_get_image', {'id': image.id}) }}" alt="{{ image.imageName }}">
            </div>
            <div class="float-end">
                {{ include('image/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
