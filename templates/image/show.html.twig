{% extends 'base.html.twig' %}

{% block title %}Image{% endblock %}

{% block body %}
    <h1>Image</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ image.id }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ image.imageName }}</td>
            </tr>
            <tr>
                <th>ImageSize</th>
                <td>{{ image.imageSize }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ image.created ? image.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ image.updated ? image.updated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>MineType</th>
                <td>{{ image.mineType }}</td>
            </tr>
            <tr>
                <th>OriginalName</th>
                <td>{{ image.originalName }}</td>
            </tr>
            <tr>
                <th>Dimensions</th>
                <td>{{ image.dimensions ? image.dimensions|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_image_index') }}">back to list</a>

    <a href="{{ path('app_image_edit', {'id': image.id}) }}">edit</a>

    {{ include('image/_delete_form.html.twig') }}
{% endblock %}
