{% extends 'base.html.twig' %}

{% block title %}Dovetailing index{% endblock %}

{% block body %}
    <div class="container mx-4 my-4">
        <div class="float-end">
            <a class="btn btn-primary" href="{{ path('app_dovetailing_new') }}">Create new</a>
        </div>
    </div>
    <div class="mt-2 mb-4">
        <h2>Album list</h2>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Title</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for dovetailing in dovetailings %}
                <tr>
                    <td>{{ dovetailing.id }}</td>
                    <td>{{ dovetailing.name }}</td>
                    <td>{{ dovetailing.title }}</td>
                    <td>{{ dovetailing.description|u.truncate(10, ' [...]', false) }}</td>
                    <td>
                        <a href="{{ path('app_dovetailing_show', {'id': dovetailing.id}) }}">show</a>
                        <a href="{{ path('app_dovetailing_edit', {'id': dovetailing.id}) }}">edit</a>
                        <a href="{{ path('app_comment_new', {'dovetailing': dovetailing.id}) }}">comment</a>
                        {{ include('dovetailing/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
