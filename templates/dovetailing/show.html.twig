{% extends 'base.html.twig' %}

{% block title %}Dovetailing{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="float-end">
            <a class="btn btn-primary" href="{{ path('app_dovetailing_index') }}">back to list</a>
            <a class="btn btn-primary" href="{{ path('app_dovetailing_edit', {'id': dovetailing.id}) }}">edit</a>
        </div>
        <div class="mt-2 mb-4">
            <h2>Album</h2>

            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ dovetailing.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ dovetailing.name }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ dovetailing.title }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ dovetailing.description }}</td>
                </tr>
                <tr>
                    <th>Commentaires</th>
                    <td>
                        <ul>
                            {% for comment in dovetailing.comments %}
                                <li>{{ comment.text }}</li>
                            {% endfor %}
                        </ul>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="float-end">
        {{ include('dovetailing/_delete_form.html.twig') }}
    </div>
{% endblock %}
